@model Category

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-2 mt-5">
        <div class="row pb-3">
            <h3 class=" text-primary">Delete Category</h3>
            <hr />
        </div>
        <div class=" mb-2">
            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control " disabled />
               
            </div>
            <div >
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control " disabled />
               
            </div>
            <div class="mt-3">
                <button  type="submit" class="btn btn-primary" style="width:150px; margin-right:10px">Delete</button>
                <a asp-action="Index" class="btn btn alert-secondary" style="width:150px; ">Back to Category</a>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
