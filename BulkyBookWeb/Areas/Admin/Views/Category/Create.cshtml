@model Category

<form method="post">
   @* <div asp-validation-summary="ModelOnly" class="text-danger"></span><*@/div>
    <div class="border p-2 mt-5">
        <div class="row pb-3">
            <h3 class=" text-primary">Create Category</h3>
            <hr />
        </div>
        <div class=" mb-2">
            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div >
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary" style="width:150px; margin-right:10px">Create</button>
                <a asp-action="Index" class="btn btn alert-secondary" style="width:150px; ">Back to Category</a>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
