@model IEnumerable<Category>


<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Categories</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class=" btn btn-primary"> Create New Category</a>
        </div>
    </div>
    <br />


<table class="table table-bordered table-striped" style="width:100%">
    
    <thead>
        <tr>
            <th> Category Name </th>
            <th> Category Order </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      
        @foreach ( var item in Model)
        {
            <tr>
                <td width="50%"> @item.Name</td>
                <td width="30%">@item.DisplayOrder</td>
                <td class="text-end">
                  <form method="Delete">
                          <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category"  asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-info">Edit</a>
                            <button type="submit" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</button>
                          </div>
                   </form>

                </td>
            </tr>
        }
    </tbody>
</table>

</div>
