@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Category Index";
}
<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Cover Types</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class=" btn btn-primary"> Create New CoverType</a>
        </div>
    </div>
    <br />


<table class="table table-bordered table-striped" style="width:100%">
    
    <thead>
        <tr>
            <th> Cover Name </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      
        @foreach ( var item in Model)
        {
            <tr>
                <td width="50%"> @item.Name</td>

                <td class="text-end">
                  <form method="Delete">
                          <div class="w-75 btn-group" role="group">
                                <a asp-controller="CoverType"  asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-info">Edit</a>
                            <button type="submit" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</button>
                          </div>
                   </form>

                </td>
            </tr>
        }
    </tbody>
</table>

</div>
